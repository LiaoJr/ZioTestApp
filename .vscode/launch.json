    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdbserver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/app_test",
            "MIMode": "gdb",
            "miDebuggerPath": "/home/aworks/arm-gdb/bin/arm-linux-gdb",
            "miDebuggerServerAddress": "192.168.1.136:12345",
            "cwd":"${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}